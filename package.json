{
  "name": "fastify-openapi-template",
  "version": "1.0.0",
  "description": "Fraternie's clean template for fastify and openapi-backend",
  "main": "index.js",
  "author": "Shivam Verma, Rithik Bhandari",
  "license": "MIT",
  "watch": {
    "schema": "api-docs.yaml"
  },
  "scripts": {
    "start": "node dist/src/index.js",
    "dev": "./node_modules/.bin/npm-run-all --parallel watch-docs dev-server",
    "dev-win": "npm-run-all --parallel watch-docs dev-server-win",
    "dev-server-win": "nodemon --watch '*.ts' --ignore 'src/**/*.spec.ts' --exec ts-node src/index.ts | pino-pretty",
    "dev-server": "APP_ENV=DEV './node_modules/.bin/nodemon' --watch '*.ts' --ignore 'src/**/*.spec.ts' --exec './node_modules/.bin/ts-node' src/index.ts | './node_modules/.bin/pino-pretty'",
    "watch": "tsc --watch",
    "watch-docs": "./node_modules/.bin/npm-watch",
    "build": "tsc",
    "test": "APP_ENV=TEST jest",
    "sls": "APP_ENV=DEV sls offline start",
    "schema": "npx openapi-typescript api-docs.yaml --output schema.ts",
    "lint:fix": "eslint -c .eslintrc.js --fix src/*.ts src/*/*.ts"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^15.x",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.10.0",
    "pino-pretty": "^5.1.1",
    "prettier": "^2.3.2",
    "serverless-mongodb-local": "sarcastic-verma/serverless-mongodb-local",
    "serverless-dotenv-plugin": "^3.9.0",
    "serverless-offline": "^7.0.0",
    "serverless-offline-scheduler": "^0.4.2",
    "serverless-plugin-typescript": "^1.1.9",
    "serverless-s3-remover": "^0.6.0",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "@types/aws-lambda-fastify": "^1.4.1"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.2",
    "amazon-s3-uri": "^0.1.1",
    "@amplitude/node": "^1.9.1",
    "aws-lambda-fastify": "^1.7.1",
    "aws-sdk": "^2.987.0",
    "axios": "^0.21.4",
    "dotenv": "^10.0.0",
    "fastify": "^3.19.0",
    "firebase-admin": "^10.0.0",
    "mongodb": "^4.2.2",
    "mongoose": "^6.1.3",
    "uuid": "^8.3.2",
    "http-errors": "^1.8.0",
    "openapi-backend": "^4.1.0"
  }
}
