  "tags": [],
  "paths": {
    "/api": {
      "get": {
        "operationId": "api",
        "description": "Gets the Api docs when in dev mode",
        "responses": {
          "200": {
            "description": "Gets the Api docs when in dev mode",
            "content": {
              "application/html": {}
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "BaseSchema": {
        "type": "object",
        "required": [
          "notifyUser",
          "code",
          "message",
          "error"
        ],
        "properties": {
          "error": {
            "type": "object",
            "nullable": true
          },
          "notifyUser": {
            "type": "boolean",
            "description": "Whether to show toast or snackbar to user",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "Base Response Successfully"
          },
          "code": {
            "type": "number",
            "example": 201
          }
        }
      }
    }
  }
